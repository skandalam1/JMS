<tomee>
  <!-- see http://tomee.apache.org/containers-and-resources.html -->
  <Deployments dir="C:\tomee2\apache-tomee-plus-8.0.6\webapps"/>
  <!-- activate next line to be able to deploy applications in apps -->
  <!-- <Deployments dir="apps" /> -->
  
  <Container ctype="MESSAGE" id="OTMM MDB Container">
			ResourceAdapter = JmsResourceAdapter
    </Container>
	
	
  <Resource id="JmsResourceAdapter" type="ActiveMQResourceAdapter">
        BrokerXmlConfig =  xbean:file:C:/tomee2/apache-tomee-plus-8.0.6/conf/activemq.xml
    ServerUrl = nio://localhost:10000?soTimeout=60000&amp;daemon=true&amp;keepAlive=true&amp;connectionTimeout=120000&amp;wireFormat.tcpNoDelayEnabled=true&amp;wireFormat.maxInactivityDuration=240000&amp;wireFormat.maxInactivityDurationInitalDelay=120000    
  </Resource>
          
    
    <Resource id="jms/ConnectionFactory" type="javax.jms.ConnectionFactory">
        ResourceAdapter = JmsResourceAdapter
    connectionMaxWaitTime = 30 seconds
    poolMaxSize = 40
  </Resource>
          
    
    <Resource id="jms/RemoteConnectionFactory" type="javax.jms.ConnectionFactory">
        ResourceAdapter = JmsResourceAdapter  
  </Resource>

  <Resource id="jms/JmsXA" type="javax.jms.ConnectionFactory">
        ResourceAdapter = JmsResourceAdapter		
		connectionMaxWaitTime = 30 seconds
		poolMaxSize = 40
	</Resource>
  <Resource id="jms/oQueue" type="javax.jms.Queue"/>
  <Resource id="jms/eQueue" type="javax.jms.Queue"/>
</tomee>
